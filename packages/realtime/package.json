{
  "name": "@warehouseoetzidev/realtime",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "typecheck": "tsc -noEmit",
    "build:server": "bun build ./src/server/index.ts --compile --outfile='.output/server/main'",
    "build:client": "bun build ./src/client/index.ts --compile --outfile='.output/client/main'",
    "start:server": "bun run src/server/index.ts",
    "start:client": "bun run src/client/index.ts"
  },
  "devDependencies": {
    "@tsconfig/node24": "24.0.1",
    "@types/mqtt": "^2.5.0",
    "@types/node": "24.9.1",
    "@types/qrcode": "^1.5.5",
    "@types/uuid": "10.0.0",
    "cross-env": "7.0.3",
    "typescript": "5.9.3",
    "vitest": "2.0.5",
    "esbuild": "0.25.5",
    "tsx": "4.20.6"
  },
  "dependencies": {
    "@napi-rs/canvas": "0.1.70",
    "@node-escpos/core": "^0.6.0",
    "@node-escpos/usb-adapter": "^0.3.1",
    "@seriousme/opifex": "1.11.2",
    "@warehouseoetzidev/core": "workspace:*",
    "mqtt": "^5.13.1",
    "mqtts": "^1.5.0"
  }
}
